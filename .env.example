# Telegram Bot
BOT_TOKEN=your_bot_token_here_from_BotFather

# Администратор (ваш Telegram ID, можно узнать у @userinfobot)
ADMIN_TELEGRAM_IDS=123456789,987654321

# База данных
# Для SQLite (простой вариант для начала):
DATABASE_URL=sqlite+aiosqlite:///./bot.db

# Для PostgreSQL (для продакшена):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/telegram_store

# Redis (опционально, для FSM storage)
# Если не указан, будет использоваться MemoryStorage
REDIS_URL=redis://localhost:6379/0

# Настройки приложения
DEBUG=True
LOG_LEVEL=INFO

# Пути
MEDIA_DIR=media
LOGS_DIR=logs
